[Unit]
Description=Prometheus
Wants=network-online.target
After=network-online.target

[Service]
User=ubuntu
Group=ubuntu
Type=simple
WorkingDirectory=/home/ubuntu/prometheus-2.53.0.linux-amd64
ExecStart=/home/ubuntu/prometheus-2.53.0.linux-amd64/prometheus \
  --config.file=/home/ubuntu/prometheus-2.53.0.linux-amd64/prometheus.yml \
  --storage.tsdb.path=/home/ubuntu/prometheus-2.53.0.linux-amd64/data
Restart=on-failure

[Install]
WantedBy=multi-user.target
